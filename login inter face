m = peripheral.wrap("right")
 
m.clear()
 
m.setTextScale(1)
 
m.setTextColor(1)
m.setCursorPos(11,1)
m.write("Welcome")
 
m.setCursorPos(1,3)
m.write("Username:")
 
m.setCursorPos(1,5)
m.write("Password:")
 
message = io.read()
 
m.setCursorPos(13,3)
 
m.write(message)
 
m.write("")