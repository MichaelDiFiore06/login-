function yes()
m.clear()
end
 
function part2()
 
local deposit = "yes"
 
m.clear()
 
m = peripheral.wrap("right")
 
m.setTextScale(1)
 
m.setCursorPos(1,5)
m.write("deposit")
 
m.setCursorPos(1,10)
m.write("withdraw")
 
mesage = io.read()
m.setCursorPos(13,5)
m.write(message)
m.write("")
 
if message == deposit then
yes()
end  
 
m.setCursorPos(13,10)
m.write(message)
m.write("")
end
 
--this code will be the the login inter face for dimand finachal--
